<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Created</strong>
  <%= @post.created_at %> |
  <strong>Updated</strong>
  <%= @post.updated_at %>
